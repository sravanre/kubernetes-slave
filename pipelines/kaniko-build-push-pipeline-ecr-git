@Library('shared-library') _

pipeline {
    agent {
        kubernetes {
            yamlFile "buildpods/kaniko-pod-git.yaml"
        }
    }

    environment {
        build_id = "${env.BUILD_ID}"
    }

    stages{
        stage("checkout") {
            steps{
                checkout scm
            }
        }
        stage('git clone the python web server '){
            steps{
                container('git') {
                    sh '''
                    git clone https://github.com/sravanre/python_Webservers.git
                    '''
                }
            }
        }

        stage('run the shell on ubuntu'){
            steps{
                container('ubuntu') {
                    sh '''
                    uptime
                    hostname
                    ls -ltr
                    cat /etc/*release
                    '''
                }
            }
        }
        stage('run the shell on kaniko'){
            steps{
                container('kaniko') {
                    sh '''
                    uptime
                    hostname
                    ls -ltr
                    '''
                }
            }
        }

        stage('kaniko build and push'){
            steps{
                container(name:'kaniko', shell: '/busybox/sh'){
                    sh '''
                    #!/busybox/sh
                    cd python_Webservers
                    /kaniko/executor --context `pwd` --destination public.ecr.aws/f7j1n6h0/kaniko-build-push:$build_id
                    '''
                }
            }
        }
    }
}