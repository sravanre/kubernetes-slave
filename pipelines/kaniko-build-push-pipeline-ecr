@Library('shared-library') _

pipeline {
    agent {
        kubernetes {
            yamlFile "buildpods/kaniko-pod.yaml"
        }
    }

    stages{
        stage("checkout") {
            steps{
                checkout scm
            }
        }

        stage('run the shell on ubuntu'){
            steps{
                container('ubuntu') {
                    sh '''
                    uptime
                    hostname
                    ls -ltr
                    cat /etc/*release
                    '''
                }
            }
        }
        stage('run the shell on kaniko'){
            steps{
                container('kaniko') {
                    sh '''
                    uptime
                    hostname
                    ls -ltr
                    '''
                }
            }
        }

        stage('kaniko build and push'){
            steps{
                container(name:'kaniko', shell: '/busybox/sh'){
                    sh '''
                    #!/busybox/sh
                    /kaniko/executor --context `pwd` --destination public.ecr.aws/f7j1n6h0/kaniko-build-push:0.0.1
                    '''
                }
            }
        }
    }
}